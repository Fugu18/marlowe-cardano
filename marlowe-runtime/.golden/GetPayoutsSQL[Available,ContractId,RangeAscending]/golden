Total count statement: WITH contractIds (createTxId, createTxIx) AS (SELECT * FROM UNNEST($1, $2)) SELECT count(*) FROM marlowe.payoutTxOut NATURAL JOIN marlowe.applyTx NATURAL JOIN contractIds LEFT JOIN marlowe.withdrawalTxIn ON payoutTxOut.txId = withdrawalTxIn.payoutTxId AND payoutTxOut.txIx = withdrawalTxIn.payoutTxIx WHERE (TRUE) AND withdrawalTxIn.txId ISNULL
Payouts statement: WITH contractIds (createTxId, createTxIx) AS (SELECT * FROM UNNEST($1, $2)) SELECT withdrawalTxIn.txId, applyTx.createTxId, applyTx.createTxIx, payoutTxOut.txId, payoutTxOut.txIx, payoutTxOut.rolesCurrency, payoutTxOut.role FROM marlowe.payoutTxOut NATURAL JOIN marlowe.applyTx NATURAL JOIN contractIds LEFT JOIN marlowe.withdrawalTxIn ON payoutTxOut.txId = withdrawalTxIn.payoutTxId AND payoutTxOut.txIx = withdrawalTxIn.payoutTxIx WHERE withdrawalTxIn.txId ISNULL ORDER BY applyTx.slotNo, payoutTxOut.txId, payoutTxOut.txIx OFFSET $3 FETCH NEXT $4 ROWS ONLY
