Total count statement: WITH contractIds (createTxId, createTxIx) AS (SELECT * FROM UNNEST($1, $2)) SELECT count(*) FROM marlowe.payoutTxOut NATURAL JOIN marlowe.applyTx NATURAL JOIN contractIds WHERE TRUE
Payouts statement: WITH contractIds (createTxId, createTxIx) AS (SELECT * FROM UNNEST($1, $2)) SELECT withdrawalTxIn.txId, applyTx.createTxId, applyTx.createTxIx, payoutTxOut.txId, payoutTxOut.txIx, payoutTxOut.rolesCurrency, payoutTxOut.role FROM marlowe.payoutTxOut NATURAL JOIN marlowe.applyTx NATURAL JOIN contractIds LEFT JOIN marlowe.withdrawalTxIn ON payoutTxOut.txId = withdrawalTxIn.payoutTxId AND payoutTxOut.txIx = withdrawalTxIn.payoutTxIx ORDER BY applyTx.slotNo DESC, payoutTxOut.txId DESC, payoutTxOut.txIx DESC OFFSET $3 FETCH NEXT $4 ROWS ONLY
